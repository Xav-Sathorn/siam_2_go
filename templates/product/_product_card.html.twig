<div class="card">
	<a href="{{path('product_show', {'category_slug':p.category.slug, 'slug': p.slug})}}">

		<img class="img-fluid" src="{{ image_product_directory | imagine_filter('my_thumb') }}/{{ p.mainPicture }} " alt="{{p.name}}">
	</a>
	<card-body>
		<h4 class="card-title">{{ p.name }}
			({{ p.price / 100}}
			€)
		</h4>
		<span class="badge badge-info">{{ p.category.name }}</span>
		<p class="card-text">{{ p.shortDescription }}</p>
		<a href="{{path('product_show', {'category_slug':p.category.slug, 'slug': p.slug})}}" class="btn btn-primary btn-sm">Détails</a>
		<a href="{{path('cart_add', {'id' : p.id})}}" class="btn btn-success btn-sm">Ajouter</a>
	</card-body>
</div>
