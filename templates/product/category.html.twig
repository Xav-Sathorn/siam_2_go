{% extends "base.html.twig" %}


{% block title %}
	Catégorie :
	{{ category.name }}
{% endblock %}

{% block body %}

	{% if is_granted('ROLE_ADMIN') %}
		<div class="row mt-4 mb-4">
			<li class="badge bg-primary">
				<a href="{{path("category_edit", {'id':category.id})}}" class="btn btn-primary btn-lg">
					<i class="fas fa-edit"></i>
					Editer catégorie</a>
			</li>
		</div>
	{% endif %}


	<ol class="breadcrumb ">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{category.name}}</li>

	</ol>

	<h5 class='mb-4'>{{ category.name }}</h5>

	<h2 class='text-center mb-4 text-warning'>Notre Sélection</h2>
	<div class="row">
		{% for p in category.products %}
			<div class="col-md-4 col-sm-12">
				{% include "product/_product_card.html.twig" %}
			</div>
		{% endfor %}
	</div>
{% endblock %}
